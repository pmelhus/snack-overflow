doctype html
html
  head
      block head
        title= title
        link(rel="favicon" type="image/png" href="../public/snack-overfleaux.png")
        link(rel='stylesheet' href='/stylesheets/index.css')
  body
    header
      nav
        div
          span
            a(href='/') Snack Overflow
          span
            form(action="/questions")
              input(type='search' name='term' placeholder='What are you craving?' required)
              button Forage!
          span
            if loggedInUser
              span Welcome, #{loggedInUser.userName}!
              a(href=`/users/${loggedInUser.id}`) Profile

              a(href='/users/logout') Logout

            else
              a(href='/users/signup') Sign Up!
              a(href='/users/login') Login!
    main
    block content
