extends layout.pug

block content

    if questions
    table
        thead
            tr
                th Questions
        tbody
            each question in questions
                tr
                    td: h3: a(href=`/questions/${question.id}`) #{question.title}
    if answers
    table
        thead
            tr
                th Answers
                th
        tbody
            each answer in answers
                tr
                    td: a(href=`/questions/${answer.questionId}`) #{answer.Question.title}
                    td= answer.body
