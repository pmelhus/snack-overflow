extends layout.pug

include utils.pug

block styles
  link(rel="stylesheet" href="/stylesheets/question-form.css")
  link(rel='stylesheet' href='/stylesheets/index.css')

block content
  div(id='mainContent')
    h1 Ask a question!
    div
      +validationErrorSummary
    form(id='q-form' action='/questions' method='POST')
      div(id='title')
        +field2('Title:', 'title', 'e.g. How many oreo\'s are too many oreo\'s?', 'text')
      div(id='body')
        +textarea('Body:', 'body', '', 'textarea')
      div
        input(type='submit' value='Submit')
