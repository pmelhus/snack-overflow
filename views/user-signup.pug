extends layout.pug

include utils.pug

block content
    form(action='/users/signup' method='POST')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('First Name', 'firstName', user.firstName)
        +field('Last Name', 'lastName', user.lastName)
        +field('Username', 'userName', user.userName)
        +field('Email', 'email', user.email, 'email')
        +field('Password', 'password', user.password)
        +field('Confirm Password', 'confirmPassword', user.confirmPassword)
        button Sign Up!
        button(href='/') Cancel
